<h1>Books</h1>
<main>
  <table>
    <thead>
      <tr>
        <th class = "a">Title</th>
        <th class = "b">Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= link_to  book.title, book_path(book.id)  %></td>
         <td><%= book.body %></td>
         <td></td>
         <td></td>
         <td></td>
       </tr>
      <% end %>
    </tbody>
  </table>
</main>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>