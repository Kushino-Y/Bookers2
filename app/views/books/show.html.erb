<h1>Book detail</h1>
<div class ="show-item">
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p><b>Title：</b><%= @book.title %></p>
  <p><b>Opinion : </b><%= @book.body %></p>
  <% if @book.user == current_user %>
   <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Delete", book_path(@book), method: :delete %>
  <% end %>
</div>