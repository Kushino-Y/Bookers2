<h1>Users</h1>
<h2>User info</h2>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name">name:<%= @user.name %></h3>
  <h3 class="profile-introdaction">introdaction:<%= @user.introduction %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<%= paginate @books %>
<main>
  <table>
    <thead>
      <tr>
        <th class = "a">image</th>
        <th class = "b">name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
       <tr>
         <td><p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></p></td>
         <td><%= user.name %></td>
         <td><%= link_to"Show", user_path(user.id)  %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
</main>
